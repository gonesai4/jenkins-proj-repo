
  def remote = [:]
  remote.name = 'deployment'
  remote.host = '172.31.8.252'
  remote.user = 'centos'
  remote.password = 'Rnstech@123'
  remote.allowAnyHosts = true
  node {
    def mvnHome
    stage('Preparation') {
        git credentialsId: 'github_credentials', url: 'https://github.com/gonesai4/jenkins-proj-repo.git'
        mvnHome = tool 'maven38'
    }
    stage('Build') {
        // Run the maven build
        withEnv(["MVN_HOME=$mvnHome"]) {
            if (isUnix()) {
                sh '"$MVN_HOME/bin/mvn" -Dmaven.test.failure.ignore clean package'
            } else {
                bat(/"%MVN_HOME%\bin\mvn" -Dmaven.test.failure.ignore clean package/)
            }
        }
    }
    stage('Results') {
        junit 'target/surefire-reports/*.xml'
        archiveArtifacts 'target/*.war'
    }
    stage('deployment-to-staging') {
        sh 'mv target/*.war target/newapp.war'
        sshCommand remote: remote, command: "sh /opt/tomcat8/bin/shutdown.sh"
        sshPut remote: remote, from: 'target/newapp.war', into: '/opt/tomcat8/webapps/'
        sshCommand remote: remote, command: "sh /opt/tomcat8/bin/startup.sh"   
    }
}
